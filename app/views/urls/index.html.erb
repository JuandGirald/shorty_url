<div class="row center-element">
  <div class="col-md-8">
    <%= form_for(@url) do |f| %>
      <div class="form-group">
        <h2>Enter your url</h2>
        <br/>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container text-center mt-5">
  <h2>Top 100 most accessed URLs</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Url</th>
        <th>Shorted url</th>
        <th>Title</th>
        <th>Visit count</th>
      </tr>
    </thead>
    <tbody>
      <%@urls.each do |url|%>
        <tr>
          <th> <%= url.url%></th>
          <th> <%= request.base_url%>/<%= url.shortcode%> </th>
          <th> <%= url.title %> </th>
          <td> <%= url.access %> </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>